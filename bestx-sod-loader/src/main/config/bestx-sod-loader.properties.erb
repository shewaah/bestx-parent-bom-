# SOD Loader 
sod.sendInPackets = true
sod.packetSize = 10

# BestX Database connection
<% case @env['env_general']['bestx']['db_brand']
when /^MsS/ %>
jdbc.driver_class=net.sourceforge.jtds.jdbc.Driver
jdbc.url=jdbc:jtds:sqlserver://<%=@env['env_general']['bestx']['db_hostname']%>:<%=@env['env_general']['bestx']['db_port']%>;databasename=<%=@env['env_general']['bestx']['db_database']%>;SelectMethod=cursor 
<% when /^Ora/ %>
jdbc.driver_class=oracle.jdbc.OracleDriver
jdbc.url=jdbc:oracle:thin://<%=@env['env_general']['bestx']['db_hostname']%>:<%=@env['env_general']['bestx']['db_port']%>;databasename=<%=@env['env_general']['bestx']['db_database']%>
<%- when /^My/ -%>
jdbc.driver_class=com.mysql.jdbc.Driver
jdbc.url=jdbc:mysql://<%=@env['env_general']['bestx']['db_hostname']%>:<%=@env['env_general']['bestx']['db_port']%>;databasename=<%=@env['env_general']['bestx']['db_database']%>
<%- when /^Syb/ -%>
jdbc.driver_class=net.sourceforge.jtds.jdbc.Driver
jdbc.url=jdbc:jtds:sybase://<%=@env['env_general']['bestx']['db_hostname']%>:<%=@env['env_general']['bestx']['db_port']%>;databasename=<%=@env['env_general']['bestx']['db_database']%>
<% end %>

sod.pbe.algorithm = <%= @env['env_general']['bestx']['bestxsodloader']['sod_pbe_algorithm'] %>
sod.pbe.password = <%= @env['env_general']['bestx']['bestxsodloader']['sod_pbe_password'] %>

# GRDLite MQ connection  
sod.mq.host=<%= @env['env_general']['bestx']['bestxsodloader']['sod_mq_host'] %>
sod.mq.port=<%= @env['env_general']['bestx']['bestxsodloader']['sod_mq_port'] %>
sod.mq.queueManager=<%= @env['env_general']['bestx']['bestxsodloader']['sod_mq_queuemanager'] %>
sod.mq.channel=<%= @env['env_general']['bestx']['bestxsodloader']['sod_mq_channel'] %>
sod.mq.publisherQueue=<%= @env['env_general']['bestx']['bestxsodloader']['sod_mq_publisherqueue'] %>
sod.mq.subscriberQueue=<%= @env['env_general']['bestx']['bestxsodloader']['sod_mq_subscriberqueue'] %>
sod.mq.topic=<%= @env['env_general']['bestx']['bestxsodloader']['sod_mq_topic'] %>
sod.mq.transacted=<%= @env['env_general']['bestx']['bestxsodloader']['sod_mq_transacted'] %>
sod.mq.acknowledge=<%= @env['env_general']['bestx']['bestxsodloader']['sod_mq_acknowledge'] %>
sod.mq.expiry=<%= @env['env_general']['bestx']['bestxsodloader']['sod_mq_expiry'] %>

sod.mq.sslEnabled=<%= @env['env_general']['bestx']['bestxsodloader']['sod_mq_sslenabled'] %>
sod.mq.sslCipherSuite=<%= @env['env_general']['bestx']['bestxsodloader']['sod_mq_sslciphersuite'] %>
#sod.mq.sslDebug=<%= @env['env_general']['bestx']['bestxsodloader']['sod_mq_ssldebug'] %>

sod.mq.sslKeyStoreFile=<%= @env['env_general']['bestx']['bestxsodloader']['sod_mq_sslkeystorefile'] %>
sod.mq.sslKeyStorePassword=<%= @env['env_general']['bestx']['bestxsodloader']['sod_mq_sslkeystorepassword'] %>
sod.mq.sslKeyStoreType=<%= @env['env_general']['bestx']['bestxsodloader']['sod_mq_sslkeystoretype'] %>

sod.mq.sslTrustStoreFile=<%= @env['env_general']['bestx']['bestxsodloader']['sod_mq_ssltruststorefile'] %>
sod.mq.sslTrustStorePassword=<%= @env['env_general']['bestx']['bestxsodloader']['sod_mq_ssltruststorepassword'] %>
sod.mq.sslTrustStoreType=<%= @env['env_general']['bestx']['bestxsodloader']['sod_mq_ssltruststoretype'] %>

# GRDLite and Database number of maximum connection tries, -1 means keep trying ad infinitum
# default value = -1
sod.grdLiteReconnectionMaxTries=<%= @env['env_general']['bestx']['bestxsodloader']['sod_mq_grdlitereconnectionmaxtries'] %>
sod.dbReconnectionMaxTries=<%= @env['env_general']['bestx']['bestxsodloader']['sod_mq_dbreconnectionmaxtries'] %>