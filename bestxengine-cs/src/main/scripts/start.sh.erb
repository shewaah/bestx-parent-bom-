# Scripts vars
EXE_DIR=<%=@exedir%>
PIDFILE=<%=@exedir-%>/<%=@servicename-%>.pid
# Env vars
export JAVA_HOME=<%=@javapath%>
export PATH=${JAVA_HOME}/bin:$PATH
# VM vars
OPT_1="-server -Dss.app.name=<%=@servicename-%> -XX:+AggressiveOpts -XX:+UseFastAccessorMethods -Xms512m -Xmx1024m -Dcom.sun.management.jmxremote -Dcom.sun.management.jmxremote.ssl=false -Dcom.sun.management.jmxremote.port=29300 -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.password=false -Duser-timezone=CET -XX:HeapDumpPath==../log/dump -XX:+HeapDumpOnOutOfMemoryError
set OPT_2=-cp ../cfg;../lib/* it.softsolutions.bestx.Main -XX:HeapDumpPath==../log/dump -XX:+HeapDumpOnOutOfMemoryError"
# Start the game!
echo "java arguments: $OPT_1 $OPT_2 "
if [ -f $PIDFILE ] && kill -0 $(cat $PIDFILE); then
    echo 'Service <%=@servicename-%> already running' >&2
    exit 1
fi
# start "Tradestac IDC playback"
cd $EXE_DIR/bin
$JAVA_HOME/bin/java $OPT_1 $OPT_2 &
echo $! 1>$PIDFILE
if [ "$?" != "0" ];
then
        echo "<%=@servicename-%> exited with code $?."
        exit $?
fi
exit 0