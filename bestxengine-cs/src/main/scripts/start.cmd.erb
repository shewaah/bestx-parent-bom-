<% if @jpath.downcase.include? 'jdk' -%>
SET JVM_HOME=<%=@jpath-%>\jre
<% else -%>
SET JVM_HOME=<%=@jpath%>
<% end -%>
set OPT_1=-server -Dss.app.name=<%=@servicename-%> -XX:+AggressiveOpts -XX:+UseFastAccessorMethods -Xms512m -Xmx1024m -Dcom.sun.management.jmxremote -Dcom.sun.management.jmxremote.ssl=false -Dcom.sun.management.jmxremote.port=29300 -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.password=false -Duser-timezone=CET -XX:HeapDumpPath==../log/dump -XX:+HeapDumpOnOutOfMemoryError
set OPT_2=-cp ../cfg;../lib/* it.softsolutions.bestx.Main
"%JVM_HOME%\bin\java" %OPT_1% %OPT_2%