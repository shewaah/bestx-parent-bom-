discardOneOf = 5
randomSleepBeforeReply = 10000

# BestX Database connection
<% case @env['env_general']['bestx']['db_brand']
when /^MsS/ %>
jdbc.driver_class=net.sourceforge.jtds.jdbc.Driver
jdbc.url=jdbc:jtds:sqlserver://<%=@env['env_general']['bestx']['db_hostname']%>:<%=@env['env_general']['bestx']['db_port']%>;databasename=<%=@env['env_general']['bestx']['db_database']%>;SelectMethod=cursor 
<% when /^Ora/ %>
jdbc.driver_class=oracle.jdbc.OracleDriver
jdbc.url=jdbc:oracle:thin://<%=@env['env_general']['bestx']['db_hostname']%>:<%=@env['env_general']['bestx']['db_port']%>;databasename=<%=@env['env_general']['bestx']['db_database']%>
<% when /^My/ %>
jdbc.driver_class=com.mysql.jdbc.Driver
jdbc.url=jdbc:mysql://<%=@env['env_general']['bestx']['db_hostname']%>:<%=@env['env_general']['bestx']['db_port']%>;databasename=<%=@env['env_general']['bestx']['db_database']%>
<% when /^Syb/ %>
jdbc.driver_class=net.sourceforge.jtds.jdbc.Driver
jdbc.url=jdbc:jtds:sybase://<%=@env['env_general']['bestx']['db_hostname']%>:<%=@env['env_general']['bestx']['db_port']%>;databasename=<%=@env['env_general']['bestx']['db_database']%>
<% end %>

jdbc.username = <%= @env['env_general']['bestx']['db_sa_username'] %> 
jdbc.password = <%= @env['env_general']['bestx']['db_sa_password'] %> 

# GRDLite MQ connection  
mq.host=<%= @env['env_general']['bestx']['bestx-grdlite-simulator']['grdlite_mq_host'] %> 
mq.port=<%= @env['env_general']['bestx']['bestx-grdlite-simulator']['grdlite_mq_port'] %> 
mq.channel=<%= @env['env_general']['bestx']['bestx-grdlite-simulator']['grdlite_mq_channel'] %> 
mq.queueManager=<%= @env['env_general']['bestx']['bestx-grdlite-simulator']['grdlite_mq_queuemanager'] %> 
mq.transacted=true 
mq.acknowledge=1
mq.publisherQueue=<%= @env['env_general']['bestx']['bestx-grdlite-simulator']['grdlite_mq_publisherqueue'] %> 
mq.subscriberQueue=<%= @env['env_general']['bestx']['bestx-grdlite-simulator']['grdlite_mq_subscriberqueue'] %> 
mq.expiry=false
mq.topic=TestTopic

mq.sslEnabled=false
mq.sslCipherSuite=SSL_RSA_WITH_NULL_SHA
#mq.sslDebug=ssl

